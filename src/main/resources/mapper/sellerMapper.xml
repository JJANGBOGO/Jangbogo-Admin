<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jangbogo.admin.dao.SellerMapper">

    <update id="reportSeller" parameterType="map">
        # 2 = 신고
        UPDATE SELER
        SET STATE_CD = 2
        WHERE IDX = #{idx}
          AND EMAIL = #{email};
    </update>

    <update id="approveSeller" parameterType="map">
        # 1 = 승인
        UPDATE SELER
        SET STATE_CD = 1
        WHERE IDX = #{idx}
          AND EMAIL = #{email};
    </update>

    <select id="selectSeller" resultType="Seller">
        <include refid="selectSeller" />
        WHERE IDX = #{idx};
    </select>

    <select id="selectSellerDtl" resultType="SellerDtl">
        SELECT *
        FROM SELER_DTL
        WHERE SELER_IDX = #{seler_idx}
    </select>

    <select id="searchResultCnt" parameterType="SearchCondition" resultType="int">
        SELECT COUNT(*)
        FROM SELER
        WHERE true
        <include refid="searchCondition"/>
    </select>

    <select id="searchSelectPage" parameterType="SearchCondition" resultType="Seller">
        <include refid="selectSeller"/>
        WHERE TRUE
        <include refid="searchCondition"/>
        ORDER BY REG_TM DESC, IDX DESC
        LIMIT #{offset}, #{pageSize}
    </select>

    <sql id="selectSeller">
        SELECT *
        FROM SELER
    </sql>

    <sql id="searchCondition">
        <choose>
            <when test='option=="E"'>
                AND EMAIL LIKE concat('%', #{keyword}, '%')
            </when>
            <when test='option=="N"'>
                AND CPNM LIKE concat('%', #{keyword}, '%')
            </when>
            <otherwise>
                AND (EMAIL LIKE concat('%', #{keyword}, '%')
                OR CPNM LIKE concat('%', #{keyword}, '%'))
            </otherwise>
        </choose>
    </sql>

</mapper>
